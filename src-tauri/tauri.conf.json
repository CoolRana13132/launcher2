{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Retrac",
  "version": "0.1.0",
  "identifier": "launcher.retrac.site",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Retrac",
        "width": 936,
        "height": 600,
        "minWidth": 530,
        "maxWidth": 1200,
        "maxHeight": 800,
        "theme": "Dark",
        "windowClassname": "Retrac",
        "backgroundColor": "#2e2e2e",
        "decorations": false,
        "shadow": true,
        "maximizable": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": ["**/**"]
        }
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["retrac"]
      }
    }
  }
}
